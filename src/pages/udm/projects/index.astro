---
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';

const projects = (await getCollection('projects')).sort(
	(a, b) => (a.data.order || 0) - (b.data.order || 0)
);
---

<!doctype html>
<html lang="udm">
	<head>
		<BaseHead title={`ÐŸÑ€Ð¾ÐµÐºÑ‚ÑŠÑ‘Ñ - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
                max-width: calc(100% - 2em);
                margin: auto;
                padding: 3em 1em;
			}
			ul {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			li {
                background: #fff;
                border: 1px solid #eee;
                border-radius: 12px;
                overflow: hidden;
				transition: 0.2s ease;
			}
            li:hover {
                transform: translateY(-4px);
                box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            }
			li a {
				text-decoration: none;
                color: inherit;
                display: block;
                height: 100%;
			}
            .project-avatar-container {
                height: 200px;
                overflow: hidden;
                background: #f5f5f5;
                display: flex;
                align-items: center;
                justify-content: center;
            }
			.project-avatar {
				width: 100%;
                height: 100%;
				object-fit: cover;
			}
            .content {
                padding: 1.5rem;
            }
			.title {
				margin: 0 0 0.5rem 0;
				font-size: 1.5rem;
                color: rgb(var(--black));
			}
			.description {
				margin: 0;
				color: rgb(var(--gray));
                font-size: 0.95rem;
                line-height: 1.5;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						projects.map((project) => (
							<li>
								<a href={`/udm/projects/${project.id}/`}>
                                    <div class="project-avatar-container">
                                        {project.data.avatar ? (
                                            <img src={project.data.avatar} alt={project.data.title} class="project-avatar" />
                                        ) : (
                                            <div style="font-size: 3rem;">ðŸš€</div>
                                        )}
                                    </div>
                                    <div class="content">
                                        <h4 class="title">{project.data.title}</h4>
                                        <p class="description">{project.data.description}</p>
                                    </div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>